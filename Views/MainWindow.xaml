<Window
    x:Class="SimpleVideoCompressor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SimpleVideoCompressor"
    xmlns:compressionstyle="clr-namespace:SimpleVideoCompressor.Collections"
    mc:Ignorable="d"
    Title="Simple Video Compressor"
    Height="300"
    Width="500"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize">
    <Grid
        Margin="20">

        <Grid
            Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="Auto" />
                <RowDefinition
                    Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,10">
                <Label
                    Padding="0"
                    FontWeight="Bold"
                    Margin="0,0,0,10"
                    Content="Upload file*" />

                <StackPanel
                    Orientation="Horizontal">
                    <Button
                        x:Name="btn_FileUploadUser"
                        Margin="0,0,10,0"
                        Content="..."
                        Width="50"
                        Click="btn_FileUploadUser_Click" />
                    <TextBlock x:Name="textblock_UserFile"/>
                </StackPanel>
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Margin="0,0,0,10">
                <Label
                    Content="Path*"
                    FontWeight="Bold"
                    Padding="0"
                    Margin="0,0,0,10" />

                <StackPanel
                    Orientation="Horizontal">
                    <Button
                        x:Name="btn_FilePathUser"
                        Margin="0,0,10,0"
                        Content="..."
                        Width="50"
                        Click="btn_FilePathUser_Click" />
                    <TextBlock x:Name="textblock_UserFilePath"/>
                </StackPanel>
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Margin="0,0,0,40">
                <Label
                    Content="Compression style*"
                    FontWeight="Bold"
                    Padding="0"
                    Margin="0,0,0,10" />
                <ComboBox
                    x:Name="combobox_CompressionStyleSelection"
                    Width="100"
                    HorizontalAlignment="Left">
                    <ComboBoxItem
                        Content="H.265"/>
                </ComboBox>
            </StackPanel>

            <StackPanel
                Grid.Row="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="10" />
                        <ColumnDefinition
                            Width="100" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                    </Grid.RowDefinitions>

                    <Button
                        x:Name="btn_StartCompression"
                        Grid.Column="2"
                        Content="Start"
                        Height="20"
                        VerticalAlignment="Bottom"
                        Click="btn_StartCompression_Click" />
                    <ProgressBar
                        x:Name="progressbar_CompressionProgress"
                        Grid.Column="0"
                        Visibility="Collapsed" />
                </Grid>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
